{
  "name": "bsky-notifications-app",
  "private": true,
  "version": "0.4.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "wireit",
    "build:app": "wireit",
    "preview": "vite preview",
    "test": "wireit",
    "test:types": "wireit"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.57.0",
    "@atproto/api": "^0.15.13",
    "@ffmpeg/ffmpeg": "^0.12.15",
    "@ffmpeg/util": "^0.12.2",
    "@tanstack/react-query": "^5.0.0",
    "@types/node": "^24.2.1",
    "date-fns": "^3.0.0",
    "hls.js": "^1.6.7",
    "idb": "^8.0.3",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.9.2",
    "vite": "^5.0.0",
    "wireit": "^0.14.12"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:app",
        "test:types"
      ]
    },
    "build:app": {
      "command": "vite build",
      "files": [
        "src/**/*",
        "vite.config.ts",
        "tsconfig.json",
        "postcss.config.js",
        "tailwindcss.config.js",
        "index.html"
      ],
      "output": [
        "dist/**/*"
      ]
    },
    "test": {
      "dependencies": [
        "build:app",
        "test:types"
      ]
    },
    "test:types": {
      "command": "tsc --build --pretty",
      "files": [
        "src/**/*.{ts,tsx}",
        "tsconfig.json"
      ]
    }
  }
}
